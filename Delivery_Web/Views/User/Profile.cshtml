@using Delivery_Models.Models.Enum;
@model UserDto


<div class="card shadow border-0">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Profile</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form asp-action="Profile" method="post">
                        <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">
                            Edit Profile
                        </h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control" placeholder="Please choose your username." />
                            <label asp-for="FullName" class="form-label"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Please choose your username." disabled />
                            <label asp-for="Email" class="form-label"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="BirthDate" class="form-control" placeholder="Please choose your username." />
                            <label asp-for="BirthDate" class="form-label"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <select asp-for="Gender" asp-items="@Html.GetEnumSelectList(typeof(Gender))" class="form-select">
                                <option disabled selected>@Model.Gender</option>
                            </select>

                            <label asp-for="Gender" class="form-label"></label>
                        </div>

                        
                        <div class="form-floating mb-3">
                            <input asp-for="Address" class="form-control" placeholder="Please enter your phone number." />
                            <label asp-for="Address" class="form-label"></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Please choose your username." />
                            <label asp-for="PhoneNumber" class="form-label"></label>
                        </div>

                        <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>


                       @*  <div class="d-flex justify-content-between pt-2">
                            <p>
                                <a asp-action="Register" asp-controller="User">Register as a new user</a>
                            </p>
                        </div> *@
                    </form>

                </section>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}